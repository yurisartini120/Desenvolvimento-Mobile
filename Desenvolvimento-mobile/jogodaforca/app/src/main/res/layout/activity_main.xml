<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.MainActivity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view.MainActivity">

        <TextView
            android:id="@+id/tvPalavraOculta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:layout_centerInParent="true"
            android:text="Palavra Oculta: _ _ _ _ _"
            />

        <EditText
            android:id="@+id/etLetra"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvPalavraOculta"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp"
            android:hint="Adivinhe uma letra"
            android:minHeight="48dp" />

        <Button
            android:id="@+id/btnAdivinhar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/etLetra"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp"
            android:text="Adivinhar"
            />

    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>